<header class="nav navbar scroll_header">
  <div class="container-lg">
    <nav class='nav'>
      <%= link_to topics_path, class: 'navbar-link d-lg-block d-none' do %>
        <div class="header-logo nav-item">
          <%= image_tag asset_path("Daddy_s_logo.svg"), class: "Daddy-s-logo" %>
          Daddy's break
        </div>
      <% end %>
      <%= link_to topics_path, class: 'navbar-link ml-5 d-lg-none d-block' do %>
        <div class="header-logo nav-item">
          <%= image_tag asset_path("Daddy_s_logo.svg"), class: "Daddy-s-logo" %>
        </div>
      <% end %>
    </nav>

    <nav class="nav search-bar d-none d-md-block">
      <% if user_signed_in? %>
          <%= form_with url: search_path, method: :get, class: "search-form", local: true do |f| %>
            <div class="row">

              <%= f.text_field :word, class: "search-input", placeholder: "Search" %>
              <%= button_tag type: 'submit', class: "search-button" do %>
                <i class="fas fa-search edit-pen-title"></i>
              <% end %>

              <div class="search-option">

                <div>
                  <%= f.radio_button :range, :user %>
                  <%= f.label :range do %>
                    <i id="users" class="fas fa-users edit-pen-title"></i>
                    <span>Users</span>
                  <% end %>
                </div>
                <div>
                  <%= f.radio_button :range, :topic %>
                  <%= f.label :range do %>
                    <i id="threads" class="far fa-clipboard edit-pen-title"></i>
                    <span>Threads</span>
                  <% end %>
                </div>
                
              </div>
              
            </div>
          <% end %>
      <% end %>
    </nav>

  <%= render 'layouts/nav_dropdown' %>

  </div>
</header>