<table class="table table-borderless category-index">

  <thead>
    <th>Category</th>
  </thead>

  <tbody>
    <% categories.each do |category| %>
      <tr>
        <td>
          <%= link_to topics_path(category_id: category.id) do %>
            <%= category.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>