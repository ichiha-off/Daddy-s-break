<header class="nav navbar header">
  <div class="container-lg">
    <nav class='nav'>
      <%= link_to topics_path, class: 'navbar-link' do %>
        <div class="header-logo nav-item">
          <i class="fas fa-crown"></i>
          Daddy's break
          <i class="fas fa-crown"></i>
        </div>
      <% end %>
    </nav>

    <nav class="nav search-bar">
      <%= form_with url: search_path, method: :get, class: "search-form", local: true do |f| %>
        <div class="row">

          <%= f.text_field :word, class: "search-input", placeholder: "Search" %>
          <%= button_tag type: 'submit', class: "search-button" do %>
            <i class="fas fa-search edit-pen-title"></i>
          <% end %>

          <div class="search-option">
            <div>
              <%= f.radio_button :range, :user %>
              <%= f.label :range do %>
                <i id="users" class="fas fa-users edit-pen-title"></i>
                <span>Users</span>
              <% end %>
            </div>
            <div>
              <%= f.radio_button :range, :topic %>
              <%= f.label :range do %>
                <i id="threads" class="far fa-clipboard edit-pen-title"></i>
                <span>Threads</span>
              <% end %>
            </div>
          </div>
              
        </div>
      <% end %>
    </nav>

    <%= render 'layouts/nav_dropdown' %>

  </div>
</header>