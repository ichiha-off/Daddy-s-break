<nav>
  <ul class="nav justify-content-end">
    <li class="nav-item dropdown">

      <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" type="button" role="button" id="dropdownMenuButton" aria-haspopup="true" aria-expanded="false">
        <%= attachment_image_tag(current_user, :profile_image, fallback: "no-user.jpg", class: "header-user-icon") %>
        <% if unchecked_notifications.any? %>
          <i class="fas fa-circle notifications-circle"></i>
        <% end %>
      </a>

      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">

        <%= link_to user_path(current_user), class: 'dropdown-item' do %>
          <i class="fa fa-user"> マイページ</i>
        <% end %>

        <%= link_to notifications_path, class: 'dropdown-item' do %>
          <i class="fas fa-bell"> 通知</i>
          <% if unchecked_notifications.any? %>
            <i class="fas fa-circle in-notifications-circle"></i>
          <% end %>
        <% end %>

        <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
          <i class="fas fa-sign-out-alt"> ログアウト</i>
        <% end %>

      </div>

    </li>
  </ul>
