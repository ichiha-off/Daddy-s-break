<% visitor = notification.visitor %>

<div class="col-sm-12 list-group-item notification-index-item">
  <%= link_to user_path(notification.visitor) do %>
    <%= attachment_image_tag visitor, :profile_image, :fill,100,100, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class:"profile-img-circle" %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
  <br>

  <% if notification.action == "comment"  %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>

  <% elsif notification.action == "reply" %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @reply %></p>
  
  <% elsif notification.action == "topic" %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @topic %></p>

  <% end %>

</div>