<div class="container">
  <div class="row topic-index">
    <div class="col-sm-8">

      <table class="table">
        <% @topics.each do |topic| %>
          <tr>
            <td>
              <%= link_to topic_path(topic) do %>
                <%= attachment_image_tag(topic, :image, size: "100x100", fallback: "no_image.jpg") %>
              <% end %>
            </td>
            <td>
              <%= link_to topic_path(topic) do %>
                <%= topic.title %>
              <% end %>
            </td>
            <td>By
              <%= topic.user.name %>
            </td>
            <td>
              <%= link_to "#{topic.comments.count} コメント", topic_path(topic.id) %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>

    <div class="col-sm-4">
      <%= link_to new_topic_path do %>
        <i class="fas fa-plus"> 新しいスレッドを投稿する</i>
      <% end %>
    </div>

  </div>
</div>