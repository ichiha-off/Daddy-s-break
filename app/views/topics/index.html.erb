<div class="container-lg">
  <div class="row flex-row-reverse">

    <div class="col-lg-4 col-12 pl-lg-5 mt-lg-5">
      <div class="row">

        <div class="col-12">
          <div class="topic-index-button">
            <%= link_to new_topic_path do %>
              <i class="fas fa-plus"> New Threads</i>
            <% end %>
          </div>

          <div class="row">

            <div class="col-lg-12 d-none d-lg-block">
              <div class="topic-index-button">
                <%= link_to topics_today_ranking_path do %>
                  <i class="fas fa-crown"> Today's Ranking</i>
                <% end %>
              </div>
            </div>

            <div class="col-lg-12 d-none d-lg-block">
              <div class="topic-index-button">
                <%= link_to topics_weekly_ranking_path do %>
                  <i class="fas fa-crown"> Weekly Ranking</i>
                <% end %>
              </div>
            </div>

            <div class="col-12 category-search d-none d-lg-block">
              <%= render 'layouts/category_search', categories: @categories %>
            </div>

          </div>

        </div>

      </div>
    </div>

    <% if params[:category_id].blank? %>
    
      <div class="col-lg-8 col-12 topic-index mb-5">
        <%= render 'index', topics: @topics %>
      </div>

    <% else %>

      <div class="col-lg-8 col-12 topic-index mb-5">
        <h2><b>「<%= Category.find(params[:category_id]).name %>」</b></h2>
        <%= render 'index', topics: @category_topics %>
      </div>

    <% end %>

    <div class="col-12 category-search d-block d-lg-none mb-5">
      <%= render 'layouts/category_search', categories: @categories %>
    </div>

  </div>
</div>