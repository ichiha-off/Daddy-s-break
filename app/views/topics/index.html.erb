<div class="container">
  <div class="row flex-row-reverse">

    <div class="col-lg-3 offset-lg-1 col-sm-12 topic-create-button">
      <%= link_to new_topic_path do %>
        <i class="fas fa-plus"> 新しいスレッドを投稿する</i>
      <% end %>

      <div class="row">

        <div class="col-lg-12 px-0 d-md-none d-lg-block">
          <%= link_to topics_today_ranking_path, class: "ranking-action" do %>
            <i class="fas fa-crown"> Today's Ranking</i>
          <% end %>
        </div>

        <div class="col-lg-12 px-0 d-md-none d-lg-block">
          <%= link_to topics_weekly_ranking_path, class: "ranking-action" do %>
            <i class="fas fa-crown"> Weekly Ranking</i>
          <% end %>
        </div>

        <div class="col-sm-12 category-search d-md-none d-lg-block">

          <%= render 'layouts/category_search', categories: @categories %>

        </div>

      </div>

    </div>

    <% if params[:category_id].blank? %>
    
      <div class="col-lg-8 col-sm-12 topic-index">
        <%= render 'index', topics: @topics %>
      </div>

    <% else %>

      <div class="col-lg-8 col-sm-12 topic-index">
        <%= render 'index', topics: @category_topics %>
      </div>

    <% end %>

  </div>
</div>