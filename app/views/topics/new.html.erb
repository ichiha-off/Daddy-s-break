<div class="container-lg">
  <%= form_with model: @topic, local: true do |f| %>
    <div class="row my-5">

      <div class="col-12 topic-new-image">

        <div class="add-image">
          <span class="fas fa-camera"></span> <%= f.attachment_field :image %>
        </div>
        
        <div class="w-100">
          <img class='image_preview'>
        </div>

      </div>

      <div class="col-12">
        <div class="topic-form-area">
          <%= f.text_field :title, placeholder: "タイトルを記入してください", class: "form-control neumorphism-form" %>
        </div>

        <div class="topic-form-area">
          <%= f.text_area :body, placeholder: "本文を記入してください", class: "form-control neumorphism-form" %>
        </div>

        <div class="topic-form-area">
          <%= f.collection_select :category_id, @categories, :id, :name, {:prompt => 'カテゴリ選択'}, {class: 'custom-select neumorphism-form'} %>
        </div>

        <div class="text-center my-5 my-lg-0">
          <%= f.submit "新規登録", class: 'btn btn-white btn-lg' %>
        </div>
      </div>
      
    </div>

  <% end %>
</div>