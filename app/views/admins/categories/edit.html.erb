<div class="container">
  <div class="row category-edit">
    <h3 class="col-12">カテゴリ編集</h3>
    <div class="row col-12">
      <%= form_with model: [:admins, @category], local:true, class: "col-12" do |f| %>
        <table class="table table-striped table-light">
          <tbody>
              <tr>
                <td><%= f.label :name, 'カテゴリ名' %></td>
                <td><%= f.text_field :name %></td>
                <td><%= f.radio_button :is_active, :有効 %> <%= f.label :有効 %></td>
                <td><%= f.radio_button :is_active, :無効 %> <%= f.label :無効 %></td>
                <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
              </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>