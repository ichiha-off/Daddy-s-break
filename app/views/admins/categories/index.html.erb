<div class="container-lg mb-5">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center my-5">カテゴリ作成・一覧</h3>
      <table class="table table-responsive-sm table-striped table-light">
        <thead class="thead-dark">
          <tr>
            <th>カテゴリ名</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>

        <%= form_with model: [:admins, @category], local: true do |f| %>
          <tbody>
              <tr>
                <td><%= f.text_field :name, class: "form-control" %></td>

                <td><%= f.radio_button :is_active, :有効, checked: "checked"%> <%= f.label :有効 %>　/　<%= f.radio_button :is_active, :無効 %> <%= f.label :無効 %></td>

                <td class="text-right"><%= f.submit "追加", class: "btn btn-success" %></td>
              </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row category-index">
    <div class="col-12">
      <table class="table table-striped table-light">
        <thead class="thead-dark">
          <tr>
            <th>カテゴリ名</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.is_active %></td>
              <td class="text-right"><%= link_to "編集する", edit_admins_category_path(category), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>