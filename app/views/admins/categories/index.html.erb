<div class="container-lg">
  <div class="row category-new">
    <div class="col-12">
      <h3>カテゴリ一覧・作成</h3>
      <table class="table table-striped table-light">
        <thead class="thead-dark">
          <tr>
            <th>カテゴリ名</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <%= form_with model: [:admins, @category], local: true do |f| %>
          <tbody>
              <tr>
                <td><%= f.text_field :name %></td>

                <td><%= f.radio_button :is_active, :無効 %> <%= f.label :無効 %></td>
                <td><%= f.radio_button :is_active, :有効, checked: "checked"%> <%= f.label :有効 %></td>

                <td><%= f.submit "追加", class: "btn btn-success" %></td>
              </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row category-index">
    <div class="col-12">
      <table class="table table-striped table-light">
        <thead class="thead-dark">
          <tr>
            <th>カテゴリ名</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.is_active %></td>
              <td><%= link_to "編集する", edit_admins_category_path(category), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>