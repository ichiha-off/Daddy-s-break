<div class="container-lg">

  <% if @range == 'topic' %>
  
    <div class="row">

      <h2 class="search-headline">スレッド検索結果</h2>

      <div class="col-12 topic-index">
        <%= render 'topics/index', topics: @topic %>
      </div>

    </div>

  <% elsif @range == 'user' %>

    <div class="row">

      <h2 class="search-headline">ユーザー検索結果</h2>

      <%= render 'users/index', users: @user %>

    </div>

  <% end %>

</div>
