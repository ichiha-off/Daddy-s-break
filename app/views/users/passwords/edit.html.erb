<div id="devise-visual">

  <div id="devise-images">
    <div class="devise-image1"></div>
    <div class="devise-image2"></div>
    <div class="devise-image3"></div>
    <div class="devise-image4"></div>
  </div>

  <div class="container-fluid devise-form-area">
    <div class="row justify-content-center">

      <div class="col-12 d-none d-lg-block">
        <%= image_tag asset_path('Daddy_s_logo_white.svg'), alt: "logo", size: "150x150" %>

        <h1><b>Daddy's break</b></h1>

        <h2>Change your password</h2>
      </div>

      <div class="col-12 d-block d-lg-none">
        <%= image_tag asset_path('Daddy_s_logo_white.svg'), alt: "logo", size:"100x100" %>

        <h3><b>Daddy's break</b></h3>

        <h4>Change your password/h4>
      </div>

      <div class="col-12 col-sm-8 col-lg-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "login-form", method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "login-password" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "login-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: "login-submit" %>
          </div>
        <% end %>

        <div class="row">
          <%= render "users/shared/links" %>
        </div>

      </div>

    </div>
  </div>

</div>
