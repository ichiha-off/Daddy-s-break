<div class="container-lg mt-5">
  <div class="row user-show justify-content-around">

    <div class="col-lg-4 col-12 user-show-image mb-5 mb-lg-0 p-0 text-center">

      <%= attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size: "300x300") %>

        <% if current_user == @user %>
          <div class="user-edit-button">
            <%= link_to edit_user_path(@user) do %>
              <i class="far fa-edit fa-3x"></i>
            <% end %>
          </div>
        <% end %>

      </div>

    <div class="col-lg-7 col-10 user-show-profile mt-5 mt-lg-0">

      <div class="row align-items-center">

        <div class="col-sm-10 col-12 font-weight-bold text-break user-show-name">
          <%= @user.name %>
        </div>

        <div class="col-sm-2 col-12 text-right user-show-follow-action">
          <% if current_user != @user %>

            <% if current_user.following?(@user) %>
              <%= link_to user_relationships_path(@user.id), class: "btn btn-primary", method: :delete do %>
                <i class="fas fa-minus"></i>
              <% end %>

            <% else %>
              <%= link_to user_relationships_path(@user.id), class: "btn btn-primary", method: :post do %>
                <i class="fas fa-plus"></i>
              <% end %>
            <% end %>
          
          <% end %>
        </div>

      </div>

      <div class="row user-show-counts">

        <div class="col-lg-4 col-12 mt-4 mt-lg-5 user-show-threads">
          <h4>Thread</h4>
          <%= link_to user_topics_index_path(user: @user.id) do %>
            <p><%= @user.topics.count %></p>
          <% end %>
        </div>

        <div class="col-lg-4 col-12 mt-3 mt-lg-5 user-show-following">
          <h4>Follow</h4>
          <%= link_to user_follows_path(@user) do %>
            <p><%= @user.following.count %></p>
          <% end %>
        </div>

        <div class="col-lg-4 col-12 mt-3 mt-lg-5 user-show-follower">
          <h4>Follower</h4>
          <%= link_to user_followers_path(@user) do %>
            <p><%= @user.followed.count %></p>
          <% end %>
        </div>

      </div>

      <div class="row">

        <div class="col-12 user-show-introduction text-break">
          <%= @user.introduction %>
        </div>

      </div>

    </div>

  </div>
</div>