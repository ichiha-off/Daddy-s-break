<div class="container neumorphism">
  <div class="row user-show">

    <div class="col-lg-5  col-sm-12 user-show-image">

      <%= attachment_image_tag(@user, :profile_image, class: "", fallback: "no_image.jpg") %>

        <% if current_user == @user %>
          <div class="user-edit-button">
            <%= link_to edit_user_path(@user) do %>
              <i class="far fa-edit fa-3x"></i>
            <% end %>
          </div>
        <% end %>

      </div>

    <div class="col-lg-5 offset-lg-1 col-sm-12 user-show-profile">

      <div class="row">

        <div class="col-sm-12 user-show-name">
          <%= @user.name %>
        </div>

      </div>

      <div class="row">

        <div class="col-sm-4 user-show-threads">
          <h4>Thread</h4>
          <%= link_to user_topics_index_path(user: @user.id) do %>
            <%= @user.topics.count %>
          <% end %>
        </div>

        <div class="col-sm-4 user-show-following">
          <h4>Following</h4>
          <p>10</p>
        </div>

        <div class="col-sm-4 user-show-follower">
          <h4>Follower</h4>
          <p>30</p>
        </div>

      </div>

      <div class="row user-show-introduction">

        <div class="col-sm-12">
          <%= @user.introduction %>
        </div>

      </div>

    </div>

  </div>
</div>