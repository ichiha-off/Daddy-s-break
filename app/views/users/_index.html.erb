<% if users.blank? %>

  <h3 class="no-topics-text"><b>見つかりませんでした。</b></h3>

<% else %>

  <div class="col-12 user-index mb-5">
    <div class="row">

    <%= paginate users %>

      <% users.each do |user| %>
        <div class="col-12">
          <div class="row">

            <div class="col-md-3 col-12 user-index-image">
              <%= attachment_image_tag(user, :profile_image, fallback: "no_image.jpg") %>
            </div>

            <div class="col-md-9 col-12 user-index-profile">

              <div class="row">

                <div class="col-md-8 col-6">
                  <%= link_to user_path(user), class: "user-index-name" do %>
                    <%= user.name %>
                  <% end %>
                </div>

                <div class="col-md-3 col-6 text-right user-index-follow-action">
                  <% if current_user != user %>
                    <% if current_user.following?(user) %>
                      <%= link_to 'フォロー中', user_relationships_path(user.id), class: "btn btn-outline-primary", method: :delete %>
                    <% else %>
                      <%= link_to 'フォローする', user_relationships_path(user.id), class: "btn btn-primary", method: :post %>
                    <% end %>
                  <% end %>
                </div>

              </div>

              <div class="row">

                <div class="col-12 user-index-introduction">
                  <%= user.introduction %>
                </div>

              </div>

            </div>

          </div>
          <div class="border"></div>
        </div>
      <% end %>

      <%= paginate users %>

    </div>
  </div>

<% end %>