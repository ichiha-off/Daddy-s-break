<div class="row user-index align-items-center">
  <% users.each do |user| %>
    <div class="col-sm-3 user-index-image">
      <%= attachment_image_tag(user, :profile_image, fallback: "no_image.jpg") %>
    </div>

    <div class="col-sm-9 user-index-profile">

      <div class="row">

        <div class="col-sm-8">
          <%= link_to user_path(user), class: "user-index-name" do %>
            <%= user.name %>
          <% end %>
        </div>

        <div class="col-sm-3 user-index-follow-action">
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to 'フォロー中', user_relationships_path(user.id), class: "btn btn-outline-primary", method: :delete %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(user.id), class: "btn btn-primary", method: :post %>
            <% end %>
          <% end %>
        </div>

      </div>

      <div class="row">

        <div class="col-sm-12 user-index-introduction">
          <%= user.introduction %>
        </div>

      </div>

    </div>

    <div class="border"></div>

  <% end %>
</div>