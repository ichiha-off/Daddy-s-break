<div class="container">
  <%= form_with model: @user, local: true do |f| %>

    <div class="row user-edit">

      <div class="col-sm-12 col-lg-4 user-edit-image">
        <%= attachment_image_tag(@user, :profile_image, size: "200x200", class: "image_preview", fallback: "no-user.jpg") %>
        <div class="add-image">
          <div class="fas fa-camera"></div> <%= f.attachment_field :profile_image %>
        </div>
      </div>

      <div class="col-sm-12 col-lg-8">
        <div class="user-edit-form-area">
          <%= f.text_field :name, class: "form-control neumorphism-form", placeholder: "名前を入力してください" %>
        </div>

        <div class="user-edit-form-area">
          <%= f.email_field :email, class: "form-control neumorphism-form", placeholder: "メールアドレスを入力してください" %>
        </div>

        <div class="user-edit-form-area">
          <%= f.text_area :introduction, rows:'5', class: "form-control neumorphism-form", placeholder: "自己紹介文を書いてみましょう（50字以内）" %>
        </div>

        <div class="text-center">
          <%= f.submit "保存する", class: 'btn btn-white btn-lg' %>
        </div>

        <div class="col-12 text-right mb-5 quit-link">
          <%= link_to "退会 >>", users_quit_path %>
        </div>

      </div>

    </div>

  <% end %>
</div>